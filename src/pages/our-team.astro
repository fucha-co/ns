---
import DefaultLayout from '../layouts/DefaultLayout.astro'

import Anchor from '../components/Anchor.astro'
import Counter from '../components/Counter.astro'
import ContentMedia from '../components/ContentMedia.astro'
import Hero from '../components/Hero.astro'
import { Icon } from 'astro-icon'

import { Image } from "astro:assets"
import img from '../assets/img/ns-team.jpg'
import hannah from '../assets/img/team-hannah-wilson-outside.jpg'
import ashleigh from '../assets/img/team-ashleigh-gale.jpg'
import Stats from '@components/Stats.astro'


const {
  reverseImg = false,
  imgWidth,
  imgHeight,
  title = 'Our Team',
  blurb = 'We are a team of experienced dietitians who approach nutrition in a way that promotes enjoyment and exploration into food. We recognise that dietary choices are highly individual and the importance of finding a balance between eating the foods we love and living a healthy lifestyle.',
} = Astro.props
---

<DefaultLayout title={title}>

  <Hero 
    title={title}
    blurb={blurb}
    img={img}
  />

  <Stats />

  <Anchor />
  
  <ContentMedia imgSrc={hannah} imgWidth={1024} imgHeight={682} >
    <h2>Hannah Wilson</h2>
    <h3 class="text-2xl !mt-2 uppercase nsv-1">Director &middot; Accredited Practising Dietititian</h3>
    <p class="text-2xl">
      Hannah Wilson is an Accredited Practicing Dietitian and Nutritionist based in Melbourne, Australia with a desire to deliver useful and personable advice for people seeking to optimise their health through food.
      <br><br>
      <a class="button has-icon max-w-max" href="/our-team/hannah-wilson">
        Learn More <Icon pack="icon-park-outline" name="arrow-right" />
      </a>
    </p>
  </ContentMedia>

  <ContentMedia imgSrc={ashleigh} imgWidth={1024} imgHeight={682} reverseImg={true}>
    <h2>Ashleigh Gale</h2>
    <h3 class="text-2xl !mt-2 uppercase nsv-1">Accredited Practising Dietititian</h3>
    <p class="text-2xl">
      Ashleigh Gale presents evidence based dietary and lifestyle changes that are both realistic, and goal orientated so you can achieve the results you are looking for, and be supported along the way.
      <br><br>
      <a class="button has-icon max-w-max" href="/our-team/ashleigh-gale">
        Learn More <Icon pack="icon-park-outline" name="arrow-right" />
      </a>
    </p>
  </ContentMedia>
   
</DefaultLayout>
