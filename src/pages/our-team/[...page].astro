---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import Anchor from '../components/Anchor.astro'
import { Card } from 'accessible-astro-components'
import Hero from '../components/Hero.astro'
import { Icon } from 'astro-icon'

export async function getStaticPaths({ paginate }) {
  const response = await fetch('http://localhost:3001/posts.json')
  const data = await response.json()

  return paginate(data, { pageSize: 16 })
}

const { page } = Astro.props
const { img = '/src/assets/img/ns-group.jpg' } = Astro.props
---

<DefaultLayout
  title="Blog"
  description="An example of a blog with dynamic content fetched from JSONPlaceholder using the title, body and userId."
>

<section class="hero my-24">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          Our Team
        </h1>
        <p class="text-2xl">
          Nutrition Solutions is a team of experienced dietitians who approach nutrition in a way that promotes enjoyment and exploration into food. We recognise that dietary choices are highly individual and the importance of finding the balance between eating the foods we love and living a healthy lifestyle.
        </p>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="#ReadMore">
            <Icon pack="icon-park-outline" name="arrow-down" />
            Learn More
          </a>
          <a
            class="button has-icon color-secondary"
            href="/bookings"
          >
            <Icon pack="ion" name="time" />
            Book Now
          </a>
        </div>
      </div>
      <img class="rounded-lg hidden lg:block" src={img} alt="" decoding="async" />
    </div>
  </div>
</section>


  <section class="my-12">
    <div class="space-content container">
      <h1>Meet Us</h1>
      <p class="text-2xl">
       
    </div>
  </section>
  <section class="my-12">
    <div class="container">
      <ul class="my-3">
        {
          page.data.map((post) => (
            <li>
              <Card
                url={'/our-team/' + post.name.replaceAll(' ', '-').toLowerCase()}
                img={'/src/assets/img/team-' + post.name.replaceAll(' ', '-').toLowerCase() + '.jpg'}
                title={post.name}
                footer={''}
              >
                {post.blurb}
              </Card>
            </li>
          ))
        }
      </ul>
    </div>
  </section>
</DefaultLayout>

<style lang="scss">
  ul {
    display: grid;
    grid-template-columns: 1fr;
    grid-gap: 4rem;

    @media (min-width: 550px) {
      grid-template-columns: repeat(2, 1fr);
      grid-gap: 2rem;
    }

    @media (min-width: 950px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<style lang="scss" is:global>

  // set your own image height
  .card__image {
    height: 20rem;
  }
</style>
